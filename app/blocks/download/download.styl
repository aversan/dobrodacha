.download-item
	display flex
	flex-flow row nowrap
	border-left 5px solid $primary-color
	max-width 870px
	min-height 69px
	padding-left 50px

	+below($breakpoint-sm - 1px)
		padding-left 0
		border none

.download-item + .download-item
	padding-top 70px

.download-item__link
a.download-item__link
	typo-body()
	color $primary-color
	margin-right 30px
	text-decoration none
	display inline-block
	position relative
	padding-left 74px
	min-height 69px
	width 180px
	flex 1 1 180px
	font-size 0

	+below($breakpoint-sm - 1px)
		width 50%
		flex 1 1 50%

.download-item__link-text
	font-size 14px
	border-bottom 1px solid $primary-color

.download-item__icon
	width 55px
	height 69px
	overflow hidden
	background-repeat no-repeat
	background-position 50% 50%
	background-image url('data:image/png;base64,')
	position absolute
	left 0
	top 50%
	margin-top -34px

.download-item__text
	typo-body()
	flex 3 3 auto

	+below($breakpoint-sm - 1px)
		flex 1 1 50%
