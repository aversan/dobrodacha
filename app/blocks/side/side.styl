.side__title
	typo-h5()
	line-height 20px
	margin 0 0 25px 0

.side__item
	margin 20px 0

.side__item-title
	typo-h4()
	text-transform uppercase
	letter-spacing .1ex
	line-height 16px
	margin 0 0 5px 0

	a
		color #212121
		text-decoration none
		border-bottom 2px solid $secondary-color

.side__item-info
	font-family $font-roboto
	font-weight 300
	font-size 12px
	line-height 16px
	color #555

.side__wrapper
	max-width 230px
	margin-left auto

	+below($breakpoint-sm - 1)
		max-width auto
		margin-left 0
